<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stoffelcharlotte.todolist">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddTaskActivity"
            android:label="@string/addtask_name_activity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".TaskActivity"
            android:label="@string/task_activity_name_activity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".FinishedTaskActivity"
            android:label="@string/oldtask_activity_name_activity"
            android:theme="@style/AppTheme" />

    </application>

</manifest>